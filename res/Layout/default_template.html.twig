<!DOCTYPE html>

{% set global_content_settings = this.getDesignSettings('global_content') %}
{% set has_header_margin = global_content_settings['has_header_margin'] %}

<html lang="{{ this.getCurrentLang() ?: 'en' }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <link rel="canonical" href="{{ bb.routing.getUri(this.getCurrentPage().getUrl(), '', this.getCurrentSite()) }}" />

    {{ this.seoMetadata(this.getCurrentPage())|raw }}

    <!--##FAVICON_SPOT##-->

    {% block stylesheets %}
      <link rel="stylesheet" href="{{ this.getCdnUri('/css/gen.css') }}">
    {% endblock %}
    <script>
      window.onDocumentReady = function (fn) {
        // Sanity check
        if (typeof fn !== 'function') {
          return;
        }

        // If document is already loaded, run method
        if (window.document.readyState === 'complete') {
          return fn();
        }

        // Otherwise, wait until document is loaded
        window.document.addEventListener('DOMContentLoaded', fn, false);
      };
    </script>

    {# ANALYTICS TOOLS - Google Analytics and Facebook Analytics - can be disabled #}
    {% if bb.token == null %}
      {% if
        google_analytics_code is defined
        and google_analytics_code
        and (
          disable_google_analytics is not defined
          or disable_google_analytics == false
        )
      %}
        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

          ga('create', '{{google_analytics_code}}', 'auto');
          ga('send', 'pageview');
        </script>
      {% endif %}

      {% if
        facebook_analytics_code is defined
        and facebook_analytics_code
        and (
          disable_facebook_analytics is not defined
          or disable_facebook_analytics == false
        )
      %}
        <script>
          window.fbAsyncInit = function() {
            FB.init({
              appId      : "{{facebook_analytics_code}}",
              xfbml      : true,
              version    : 'v2.8'
            });
            FB.AppEvents.logPageView();
          };

          (function(d, s, id){
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {return;}
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
          }(document, 'script', 'facebook-jssdk'));
        </script>
      {% endif %}
    {% endif %}

    {% block header_tag %}{% endblock %}

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    {{ this.bbtoolbar()|raw }}

    <div id="fb-root"></div>

    <div id="bb-site-wrapper" class="bb-site-wrapper{% if has_header_margin %} offset-main{% endif %} {{bb.token ? 'cloud-edit' : ''}}">
      <!-- JS Alert -->
      <noscript>
      <p><span lang="fr">JavaScript désactivé - Ce site requiert l'activation de JavaScript.</span><br><span lang="en">JavaScript is deactivated - This site requires JavaScript.</span></p>
      </noscript>
      <!-- -->

      <!--[if lt IE 9]>
      <div class="browser-ie-alert">
      <p lang="fr">Ce site requiert Microsoft Internet Explorer 9 minimum. SVP, mettez-le à jour.</p>
      <p lang="en">This website requires Microsoft Internet Explorer browser 9 minimum; please update.</p>
      </div>
      <![endif]-->

      {% block main_content %}
        {{ this.render(this.globalContentFactory().getHeader())|raw }}

        <main class="main" role="main" id="content">
          {% block content %}{% endblock %}
        </main>

        {{ this.render(this.globalContentFactory().getFooter())|raw }}
      {% endblock %}

      {% if this.isPrivacyPolicyEnabled() %}
        {% if
          banner_message is defined
          and banner_message
          and learn_more_url is defined
          and learn_more_url
          and learn_more_link_title is defined
          and learn_more_link_title
        %}
          <div id="privacy-policy-banner" class="d-none">
            <div class="container d-flex align-items-center justify-content-between">
              <div class="cookie-text">
                {{ banner_message }}
                <a href="{{ learn_more_url }}">{{ learn_more_link_title }}</a>
              </div>
              <button class="btn btn-outline-light valid">OK</button>
            </div>
          </div>
        {% elseif bb.token %}
          <div id="privacy-policy-banner" class="missing-config">
            <div class="container d-flex align-items-center justify-content-between">
              <div class="cookie-text" data-cloud-trans="missing_privacy_policy_banner_config"></div>
              <button class="btn btn-outline-light p-2 cloud-close"><i class="icon icon-times"></i></button>
            </div>
          </div>
        {% endif %}
      {% endif %}

      {# LOGIN HELPER POPIN - can disable it by defined 'disable_login_helper' and set it to true #}
      {% if
        bb.token == null
        and (
          disable_login_helper is not defined
          or disable_login_helper == false
        )
      %}
        <div class="admin-help-wrapper d-none">
          <div class="admin-help-wrapper-inner">
            <div class="cover-container">
              <h2><span class="admin-help-title"></span></h2>
              <p class="lead desktop hidden"><span class="admin-help-desktop-action"></span> <span class="keyboard-touch">CTRL + ALT + B</span></p>
              <p class="lead mobile hidden"><span class="keyboard-touch"><span class="admin-help-mobile-action"></span></span></p>
            </div>
          </div>
        </div>
      {% endif %}
    </div>

    {% block javascripts %}
      <script src="{{ this.getCdnUri('/js/theme-bottom.min.js') }}"></script>
    {% endblock %}
  </body>
</html>
