<?xml version="1.0" encoding="UTF-8"?>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for location in locations %}
        <sitemap>
            <loc>{{ bb.routing.getUri(location.loc, false, site) }}</loc>
            <lastmod>{{ this.dateHelper(location.lastmod, 'c') }}</lastmod>
        </sitemap>
    {% endfor %}
</sitemapindex>