{% set current_lang = this.getCurrentLang() %}
<form {{this.bbcontent(null, {class: 'content searchbar-wrapper'})|raw}} action="{{current_lang ? '/' ~ current_lang : ''}}/search" method="get">
  <div class="input-group">
    <input
      {% block data_attributes %}{% endblock %}
      type="text"
      name="q"
      class="form-control"
      placeholder="{{this.getObject().getParamValue('input_placeholder')}}"
    />
    <div class="input-group-append">
      <button class="btn search-btn"><i class="icon_search"></i></button>
    </div>
  </div>
</form>
