{% for color in colors %}
  .btn.{{ color.id }} {
    background-color: {{ color.color }};
    border-color: {{ color.color }};
    color: {{ color.text_color }} !important;
  }

  .btn.{{ color.id }}:hover,
  .btn.{{ color.id }}:focus,
  .btn.{{ color.id }}:active {
    background-color: {{ color.color_darken10 }};
    border-color: {{ color.color_darken10 }};
  }

  .btn.{{ color.id }} *,
  .btn.{{ color.id }}:hover *,
  .btn.{{ color.id }}:focus *,
  .btn.{{ color.id }}:active * {
    color: {{ color.text_color }} !important;
  }

  .btn-outline.btn.{{ color.id }} {
    color: {{ color.color }} !important;
    border-color: {{ color.color }};
  }

  .btn-outline.btn.{{ color.id }}:hover,
  .btn-outline.btn.{{ color.id }}:focus,
  .btn-outline.btn.{{ color.id }}:active {
    background-color: {{ color.color }};
    border-color: {{ color.color }};
    color: {{ color.text_color }} !important;
  }

  .btn-outline.btn.{{ color.id }} * {
    color: {{ color.color }} !important;
  }

  .btn-outline.btn.{{ color.id }}:hover *,
  .btn-outline.btn.{{ color.id }}:focus *,
  .btn-outline.btn.{{ color.id }}:active * {
    color: {{ color.text_color }} !important;
  }
{% endfor %}

{% for color in colors %}
  .text-{{ color.id }},
  .text-{{ color.id }} * {
    color: {{ color.color }} !important;
  }
{% endfor %}
