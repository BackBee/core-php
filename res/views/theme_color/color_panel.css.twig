body {
  background-color: {{ background_color }};
  color: {{ text_color }};
}

a,
a:hover,
.navbar-header .navbar-nav a.nav-link,
.paragraph,
.chapo,
.lead,
.metadata-wrapper,
.search-btn i,
ul.pager li a {
  color: {{ text_color }};
}

.metadata-wrapper .metadata-tag a,
.pagination .page-item .page-link,
.pagination .page-item .page-link span {
  color: {{ primary_color }};
}

.pagination .page-item.active .page-link {
  background-color: {{ primary_color }};
  border-color: {{ primary_color }};
  color: {{ primary_text_color }};
}

ul.pager li a:hover,
.owl-carousel .owl-dots .owl-dot span {
  background-color: {{ secondary_color }};
}

.cloud-liner:after,
.form-control,
.search-btn,
.image-text-vertical:not(:last-of-type),
.text-image-vertical:not(:last-of-type),
.image-text-horizontal:not(:last-of-type),
.only-text:not(:last-of-type),
.autoblock-vertical .only-text,
.highlight > .row:not(:last-of-type) .image-text-vertical,
.pagination {
  border-color: {{ secondary_color }};
}

.navbar-header {
  background-color: {{ background_color }};
}

.navbar-header .navbar-primary {
  background-color: {{ background_color }};
}

.image-text-vertical h4.autoblock-title a,
.image-text-vertical h4.autoblock-title a:hover,
.text-image-vertical h4.autoblock-title a,
.text-image-vertical h4.autoblock-title a:hover,
.image-text-horizontal h4.autoblock-title a,
.image-text-horizontal h4.autoblock-title a:hover,
.only-text h4.autoblock-title a,
.only-text h4.autoblock-title a:hover {
  color: {{ text_color }};
}

.owl-carousel .owl-dots .owl-dot.active span,
.owl-carousel .owl-dots .owl-dot:hover span {
  background-color: {{ primary_color }};
}

.owl-carousel.slider-thumbnail .current .slider-item {
  border-color: {{ primary_color }};
}

@media (max-width: 991.98px) {
  .autoblock-horizontal .row {
    border-color: {{ secondary_color }};
  }
}

{% for color in colors %}
  .has-bg-color.{{ color.id }} {
    background-color: {{ color.color }};
    color: {{ color.text_color }};
  }

  .navbar.has-bg-color.{{ color.id }} .navbar-primary {
    background-color: {{ color.color }};
  }

  .navbar.has-bg-color.{{ color.id }} .navbar-primary * {
    color: {{ color.text_color }};
  }

  .has-bg-color.{{ color.id }} * {
    color: {{ color.text_color }};
  }

  .bordred.has-bg-color.{{ color.id }} {
    border-color: {{ color.color }};
    color: {{ color.text_color }};
  }

  .bordred.has-bg-color.{{ color.id }} * {
    color: {{ color.text_color }};
  }

  .navbar-header.has-bg-color.{{ color.id }} .navbar-toggler .icon-bar,
  .navbar-header.has-bg-color.{{ color.id }} .navbar-toggler .icon-bar:after,
  .navbar-header.has-bg-color.{{ color.id }} .navbar-toggler .icon-bar:before {
    background-color: {{ color.text_color }};
  }

  .navbar-header.has-bg-color.{{ color.id }},
  .footer-main.has-bg-color.{{ color.id }} {
    border-color: {{ color.color_darken15 }};
  }

  .navbar-header.has-bg-color.{{ color.id }} .dropdown-menu {
    background-color: {{ color.color }};
  }

  .navbar-header.has-bg-color.{{ color.id }} .dropdown-menu:hover {
    background-color: {{ color.color_darken10 }};
  }

  .navbar-header.has-bg-color.{{ color.id }} .submenu {
    background-color: {{ color.color }};
  }

  .navbar-header.has-bg-color.{{ color.id }} .submenu:hover,
  .navbar-header.has-bg-color.{{ color.id }} .submenu:focus,
  .navbar-header.has-bg-color.{{ color.id }} .submenu:active,
  .navbar-header.has-bg-color.{{ color.id }} .submenu.active,
  .navbar-header.has-bg-color.{{ color.id }} .dropdown-item.active,
  .navbar-header.has-bg-color.{{ color.id }} .dropdown-item:active,
  .navbar-header.has-bg-color.{{ color.id }} .dropdown-item:hover,
  .navbar-header.has-bg-color.{{ color.id }} .dropdown-item:focus {
    background-color: {{ color.color_darken10 }};
  }

  @media (min-width: 576px) {
    .navbar-header.navbar-expand-lg ul.navbar-nav > li .submenu {
      border-color: {{ color.color_darken15 }};
    }
  }
{% endfor %}

