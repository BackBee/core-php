<!DOCTYPE html>
<html lang="{{ this.getCurrentLang.getCode() ?: 'fr' }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0"/>

    <title>{% block title %}Error - {{ this.getApplication().getSite().getLabel() }}{% endblock %}</title>

    <!--##FAVICON_SPOT##-->
    <link rel="stylesheet" href="{{ this.getCdnUri('/css/gen.css') }}">
    <link rel="stylesheet" href="{{ this.getCdnUri('/static/css/cover.css') }}">

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="text-left">
{{ this.bbtoolbar()|raw }}
<div id="cloud-ui" class="cloud-ui-wrapper"></div>
<div class="bb-site-wrapper site-wrapper text-center">
    <div class="site-wrapper-inner">
        {{ this.render(this.globalContentFactory().getHeader())|raw }}
        <h1>{% block error_title %}Error{% endblock %}</h1>
        <p class="reason">
            <em>{% block error_message %}Oops, it seems that something went wrongâ€¦ try to refresh page or click on the button below.{% endblock %}</em>
        </p>
        {% set button_settings = this.getDesignSettings('button') %}
        <a href="/" class="btn color-primary btn-md btn-{{ settings.shape }}" {% if button_settings.font %}style="font-family: {{ button_settings.font }}"{% endif %}>
            {% block button_title %}BACK TO HOMEPAGE{% endblock %}
        </a>
    </div>
</div>
{{ this.render(this.globalContentFactory().getFooter())|raw }}
<script src="{{ this.getCdnUri('/js/theme-bottom.min.js') }}"></script>
{% include 'common/hook_form.js.twig' %}
{% include 'common/hook_session.js.twig' %}
{% include 'Optimizeimage/hook.js.twig' %}
{% block hook_js %}{% endblock %}
</body>
</html>
