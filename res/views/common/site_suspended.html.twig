<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />

    <title>{% block title %}Site unavailable - {{this.getApplication().getSite().getLabel()}}{% endblock %}</title>

    <link rel="stylesheet" href="{{this.getCdnUri('/css/gen.css')}}">
    <link rel="stylesheet" href="{{this.getCdnUri('/static/css/cover.css')}}">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <div class="site-wrapper">
      <div class="site-wrapper-inner">
        <div class="cover-container">
          <div class="masthead text-center">
            <nav class="navbar navbar-fixed-top" id="header">
              {{this.render(this.globalContentFactory().getHeaderLogo(), 'logo_header')|raw}}
            </nav>
          </div>

          <h1 class="title"></h1>
          <p class="reason"></p>
        </div>
      </div>
    </div>

    <script>
      var messages = {
        'title': {
          'fr': 'Site indisponible',
          'en': 'Site unavailable'
        },
        'message': {
          'fr': 'Si vous Ãªtes l\'administrateur du site, veuillez vous connecter sur <a href="https://backbee.com">backbee.com</a> pour plus d\'informations.',
          'en': 'If you are the administrator, please sign in on <a href="https://backbee.com">backbee.com</a> for more information.'
        }
      };

      if ('fr' === navigator.language) {
        document.getElementsByClassName('title')[0].innerHTML = messages['title'].fr;
        document.getElementsByClassName('reason')[0].innerHTML = messages['message'].fr;
      } else {
        document.getElementsByClassName('title')[0].innerHTML = messages['title'].en;
        document.getElementsByClassName('reason')[0].innerHTML = messages['message'].en;
      }
    </script>
  </body>
</html>
