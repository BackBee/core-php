{% set transparencyClass = '' %}
{% set picto = this.getObject().getParamValue('picto') %}

{% if transparency.value %}
    {% set transparencyClass = 'transparency' %}
{% endif %}

{% set style_class = style.value %}
{% if bg_color.value == false %}
    {% set style_class = '' %}
{% endif %}

<div
    {% block data_attributes %}{% endblock %}
    {{ this.bbcontent(null, {
        class: style_class ~ ' ' ~ transparencyClass ~ ' content paragraph' ~ (bg_color.value == false ? '' : ' has-bg-color ' ~ bg_color.value) ~ (picto != '' ? ' with-picto d-flex' : '') ~ (picto_direction != '' ? ' picto-' ~  picto_direction.value : '')
    })|raw }}
>
    {% if picto != '' %}
        <img src="{{this.getCdnImageUrl(picto)|raw}}" alt="{{ picto|split('/')|last|raw }}" class="image-picto picto-{{picto_size.value}}" loading="lazy">
    {% endif %}

    <div class="rte-text" data-cloud-rte="true">
        {{value|raw}}
    </div>
</div>
