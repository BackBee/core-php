<div data-mobile-edit="false" data-forbidden-plugins="dnd,remove" {{this.bbcontent(null, {class: 'content button text-' ~ align.value})|raw}}>
  <a href="{{url.value}}"
    {% block data_attributes %}{% endblock %}
    {% if target_blank.value == true %}target="_blank"{% endif %}
    class="btn btn-{{color.value}} btn-{{size.value}} btn-{{ form.value == false ? 'outline' }} {{ font.value }} btn-{{style.value}}"
    onclick="return false;"
  >
    {{title.value|default('Button title')|raw}}
  </a>
</div>
