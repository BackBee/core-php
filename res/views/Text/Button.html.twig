<div {{this.bbcontent(null, {class: 'content button text-' ~ align.value})|raw}}>
  <a href="{{url.value}}"
    {% block data_attributes %}{% endblock %}
    {% if target_blank.value == true %}target="_blank"{% endif %}
    class="btn color-primary {{color.value}} btn-{{size.value}} btn-{{ form.value == false ? 'outline' }} {{ font.value }} btn-{{ style.value }}"
  >
    {{title.value|default('Hello')|raw}}
  </a>
</div>
